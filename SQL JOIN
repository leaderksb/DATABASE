SELECT * FROM topic
    LEFT JOIN author
    ON topic.author_id = author.id
;
SELECT topic.id TOPIC_ID, title, name
FROM topic
    LEFT JOIN author
    ON topic.author_id = author.id
;
SELECT T.id TOPIC_ID, title, name FROM topic T
    LEFT JOIN author ON T.author_id = author.id
;
SELECT T.id TOPIC_ID, title, name
FROM topic T
    LEFT JOIN author A
    ON T.author_id = A.id
;
SELECT T.id TOPIC_ID, title, name
FROM topic T
    LEFT JOIN author A
    ON T.author_id = A.id
WHERE
    T.id = 1
;
